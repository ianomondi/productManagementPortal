@{
    double active = ViewBag.Active;
    double upcoming = ViewBag.Upcoming;
    double closed = ViewBag.Closed;
    double total = ViewBag.Total;

}



<div class="col-xl-12">
    <div class="card proj-progress-card">
        <div class="card-block">
            <div class="row">
                <div class="col-xl-3 col-md-6">
                    <h6>Ongoing Elections</h6>
                    <h5 class="m-b-30 f-w-700">@active<span class="text-c-green m-l-10">@(total > 0 ? Math.Round(Convert.ToDouble(active / total * 100),2) : 0 )%</span></h5>
                    <div class="progress">
                        <div class="progress-bar bg-c-green" style="width:@(total > 0 ? Math.Round(Convert.ToDouble(active / total * 100),2) : 0 )%"></div>
                    </div>
                </div>

                <div class="col-xl-3 col-md-6">
                    <h6>Upcoming Elections</h6>
                    <h5 class="m-b-30 f-w-700">@upcoming<span class="text-c-yellow m-l-10">@(total > 0 ? Math.Round(Convert.ToDouble(upcoming / total * 100),2) : 0 )%</span></h5>
                    <div class="progress">
                        <div class="progress-bar bg-c-yellow" style="width:@(total > 0 ? Math.Round(Convert.ToDouble(upcoming / total * 100),2) : 0 )%"></div>
                    </div>
                </div>

                <div class="col-xl-3 col-md-6">
                    <h6>Closed Elections</h6>
                    <h5 class="m-b-30 f-w-700">@closed<span class="text-c-red m-l-10">@(total > 0 ? Math.Round(Convert.ToDouble(closed / total * 100),2) : 0 )%</span></h5>
                    <div class="progress">
                        <div class="progress-bar bg-c-red" style="width:@(total > 0 ? Math.Round(Convert.ToDouble(closed / total * 100),2) : 0 )%"></div>
                    </div>
                </div>
                <div class="col-xl-3 col-md-6">
                    <h6>Total Elections</h6>
                    <h5 class="m-b-30 f-w-700">@total<span class="text-c-blue m-l-10">100%</span></h5>
                    <div class="progress">
                        <div class="progress-bar bg-c-blue" style="width:100%"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
