@model List<supermarketFrontEnd.Models.Product>



@{
    ViewBag.Title = "Products";
    ViewBag.PageTitle = "Products";
    ViewBag.PageSubTitle = "Product List";
}

@section BreadCrumbs{

    <li class="breadcrumb-item">
        @Html.ActionLink("Dashboard", "Dashboard", "Home")
    </li>
    <li class="breadcrumb-item">
        <a href="#">@ViewBag.Title</a>
    </li>
}



<div class="card">
    <div class="card-header">
        <h5>@ViewBag.Title</h5>

        <span>All @ViewBag.Title</span>
        <div class="card-header-right">


            <a href="@Url.Action("Create")" class="btn btn-success btn-sm" title="Add Product"><i class="fa fa-plus-circle text-white"></i> New Product</a>


        </div>
    </div>
    <div class="card-block table-border-style">

        @if (Model != null && Model.ToList().Count > 0)
        {
            <div class="table-responsive">

                <table class="table table-hover data-table">

                    <thead>
                        <tr>
                            <th>
                                Product Name
                            </th>

                            <th>
                                Product Category
                            </th>
                            <th>
                                Unit Price
                            </th>
                            <th>
                                Unit of Measure
                            </th>
                            <th></th>
                        </tr>
                    </thead>

                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr class="delete_ancestor">
                                
                                <td>
                                    @Html.DisplayFor(modelItem => item.name)
                                </td>
                                <td>
                                    @(item.category != null ? item.category.name : "")
                                </td>
                                <td>
                                    @(item.sku != null ? item.sku.unitPrice : "")
                                </td>
                                <td>
                                    @(item.sku != null ? item.sku.unitOfMeasure : "")
                                </td>
                                

                                <td>
                                    <a href="@Url.Action("Edit", new { id = item.id })" class=" btn btn-sm btn-outline-primary mr-2 mb-2"><i class="fa fa-edit"></i> Edit</a>
                                    <a href="@Url.Action("Delete", new { id = item.id })" class="btn btn-sm btn-outline-danger mb-2 delete_ajax"><i class="fa fa-trash"></i> Delete</a>
                                </td>
                            </tr>
                        }
                    </tbody>


                </table>

            </div>
        }
        else
        {
            <div class="alert alert-danger">No @ViewBag.Title</div>
        }

    </div>
</div>



